<div class="center">
    <h3>パスワードの更新</h3>
    <%= form_with(model: @current_user, url: user_password_update_path, method: :patch) do |f| %>
        <p>パスワード</p>
        <p class="user_register_form_password_error error"></p>
        <%= f.password_field :password, class: "user_show_form password name user_register_form_element" %>
        <p>パスワード確認</p>
        <%= f.password_field :password_confirmation, class: "user_show_form password name user_register_form_element" %>
        <div>
            <%= f.submit "完了", class: "btn btn-success", style: "width: 150px; margin-top: 60px" %>
        </div>
    <% end %>
</div>