$(".options_select").each(function(){
    $(this).removeClass("border");
});
<% if @profile %>
    $(".options_profile").addClass("border");
    $('.hairdresser_info').html("<%= j(render "users/hairdressers/templete/profile") %>");
<% elsif @menu %>
    $(".options_menu").addClass("border");
    $('.hairdresser_info').html("<%= j(render "users/hairdressers/templete/menu") %>");
<% elsif @photo %>
    $(".options_photo").addClass("border");
    $('.hairdresser_info').html("<%= j(render "users/hairdressers/templete/photo") %>");
    $(".options_photo").addClass("border");
<% elsif @review %>
    $(".options_review").addClass("border");
    $('.hairdresser_info').html("<%= j(render "users/hairdressers/templete/review") %>");
<% else %>
$(".options_profile").addClass("border");
$('#hairdresser_show').html("<%= j(render "users/hairdressers/templete/hairdresser_info") %>");
$('.hairdresser_info').html("<%= j(render "users/hairdressers/templete/profile") %>");
$('#hairdresser_show').fadeIn(); 
$(".show_remove").click(function(){
    $('#hairdresser_show').fadeOut();
});
<% end %>
var width = $(window).width();
if (width<=425) {
    var height = $(window).height();
    var info_height = height -180
    $(".hairdresser_info").css({
        "height":`${info_height}`
    });
}
$('body').addClass("no_scroll");

