<%= month_calendar events: @reservations do |date, reservations| %>
    <%= date.day %>
    <% if Date.today <= date %>
        <% if reservations.blank?%>
            <p>予約できません</p>
        <% end %>
        <% reservations.each do |reservation| %>
            <% @time_min = reservation.start_time %>
            <% @time_max = reservation.start_time  + reservation.menu.time*60 - 1 %>
            <% @reservations_after = Reservation.where(start_time: @time_min..@time_max, status: 1) %>
            <% if @reservations_after.blank? %>
            <div>
                <span><%= reservation.start_time.hour %>時<%= reservation.start_time.min %>分</span>
                <span><%= link_to "予約する", edit_users_reservation_path(reservation.id), class: "user_reservation", id: reservation.id%>
            </div>
            <% else %>
                <p>予約できません</p>
            <% end %>
        <% end %>
    <% end %>
<% end %>

<div class="container reservation_menu">
    <div class="menu_card reservation_menu_card">
        <div class="menu_top" >
            <div class="title font"><%= @menu.name %></div>
            <div class="menu_time font"><%= @menu.time %>分</div>
            <div class="card_categories">
                <% if @menu.category[0,1] == "1" %>
                    <span class="cut_category category font">カット</span>
                <% end %>
                <% if @menu.category[1,1] == "1" %>
                    <span class="color_category category font">カラー</span>
                <% end %>
                <% if @menu.category[2,1] == "1" %>
                    <span class="curly_category category font">縮毛矯正</span>
                <% end %>
                <% if @menu.category[3,1] == "1" %>
                    <span class="perm_category category font">パーマ</span>
                <% end %>
            </div>
        <div class="menu_bottom">
            <%= attachment_image_tag @menu, :menu_image, fallback: "no_image.png", id: "prev_menu_img" %>
            <div class="explain font"><%= @menu.explanation %></div>
        </div>
    </div>
</div>
