<div class="container">
    <h3 class="please_reservation">ご希望の来店日時を選択してください<%= link_to "週間カレンダーへ", users_set_week_calendar_reservation_path(menu_id: @menu.id), class: "to_month_calendar" %></h3>

    <!--menuカード-->
    <%= render "menus/menu2" %>

    <div style="margin-top: 80px; margin-bottom: 80px;">
        <%= month_calendar events: @reservations do |date, reservations| %>
            <%= date.day %>
            <% if Date.today <= date %>
                <% if reservations.blank?%>
                    <p>予約できません</p>
                <% end %>
                <% reservations.each do |reservation| %>
                    <% @time_min = reservation.start_time %>
                    <% @time_max = reservation.start_time  + reservation.menu.time*60 - 1 %>
                    <% @reservations_after = @menu.hairdresser.reservations.where(start_time: @time_min..@time_max, status: 1) %>
                    <% if @reservations_after.blank? %>
                        <div>
                            <span><%= reservation.start_time.hour %>時<%= reservation.start_time.min %>分</span>
                            <span style="float: right"><%= link_to "予約する", edit_users_reservation_path(reservation.id), class: "user_reservation", id: reservation.id%>
                        </div>
                    <% else %>
                        <div>
                            <span><%= reservation.start_time.hour %>時<%= reservation.start_time.min %>分</span>
                            <span style="float: right; font-size: 12px; color: blue;">キャンセル待ち</span>
                        </div>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>
