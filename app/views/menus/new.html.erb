<%= form_for(@menu) do |f| %>
    <h1>メニュー名</h1>
    <%= f.text_field :name %>  
    <h1>説明</h1>
    <%= f.text_area :explanation %>
    <h1>施術時間</h1>
    <%= f.select 'time', options_for_select({ "--": nil,"15": 15, "20": 20, "25": 25, "30": 30, "35": 35, "40": 40, "45": 45, "50": 50, "55": 55, "60": 60, "65": 65, "70": 70, "75": 75, "80": 80, "85": 85, "90": 90}, nil)%>  
    <label for="post_img" class= "btn btn-primary btn-block label-img" style="width: 80%; margin: 20px 0">
            <%= f.attachment_field :menu_image, id: "post_img", class: "hidden"  %>
            画像選択
    </label>
    <%= f.submit "カードを保存", class: "save_card" %>
<% end %>

<p id="error-message" class="error-message"></p>
<div class="btn btn-success make">カード作成</div>
<div class="container">

    <div class="menu_card">
        <h1 class="title">メニュー名</h1>
        <div class="main">
            <div class= "container">
            <div class="col-xs-3">
                <%= attachment_image_tag @item, :image, fallback: "no_image.jpg", size: "150x150", id: "prev_img" %>
            </div>
            <div class="col-xs-9">
                <h2 class="explanation">説明が入ります。説明が入ります。説明が入ります。説明が入ります。</h2>
            </div>
            </div>
            
        </div>
    </div>

</div>