<div class="container">

    <div class="col-xs-5">
        <%= form_with(model: @menu, local: true) do |f| %>
            <h1>メニュー名</h1>
            <div class="name_error error"></div>
            <%= f.text_field :name, class: "form-control", style: "width: 250px;"%>  
            <h1 class="menu_tag">説明</h1>
            <div class="explain_error error"></div>
            <%= f.text_area :explanation, class: "form-control", style: "width: 300px; height: 100px;" %>
            <h1 class="menu_tag">施術時間</h1>
            <div class="time_error error"></div>
            <%= f.select 'time', options_for_select({ "--": nil,"1(実験用)": 1,"15": 15, "20": 20, "25": 25, "30": 30, "35": 35, "40": 40, "45": 45, "50": 50, "55": 55, "60": 60, "65": 65, "70": 70, "75": 75, "80": 80, "85": 85, "90": 90, "95": 95, "100": 100, "105": 105, "110": 110, "115": 115, "120": 120, "125": 125, "130": 130, "135": 135, "140": 140, "145": 145, "150": 150, "155": 155, "160": 160, "165": 165, "170": 170, "175": 175, "180": 180}, nil)%>分  
            <h1 class="menu_tag">カテゴリー</h1>
            <div class="category_error error"></div>
            <span class="category_name">カット</span>
            <%= f.check_box :category1, {class: "category1 not_category"}, 1, 0 %>
            <span class="category_name">カラー</span>
            <%= f.check_box :category2, {class: "category2 not_category"}, 1, 0 %>
            <span class="category_name">縮毛矯正</span>
            <%= f.check_box :category3, {class: "category3 not_category"}, 1, 0 %>
            <span class="category_name">パーマ</span>
            <%= f.check_box :category4, {class: "category4 not_category"}, 1, 0 %>
            <label class= "btn btn-primary btn-block label_menu_img" style="width: 100px; margin-top: 30px;">
                    <%= f.attachment_field :menu_image, id: "menu_img", class: "hidden"  %>
                    画像選択
            </label>
            <div class="menu_img_save" style="display: none;"></div>
            <%= f.submit "カードを保存", class: "save_card btn btn-success" %>
        <% end %>
    </div>

    <div class="col-xs-7">
        <div class="menu_card">
            <div class="menu_top" >
                <div class="title font"></div>
                <div class="menu_time font"></div>
                <div class="card_categories">
                    <span class="cut_category category font"></span>
                    <span class="color_category category font"></span>
                    <span class="curly_category category font"></span>
                    <span class="perm_category category font"></span>
                </div>

            </div>
            <div class="menu_bottom">
                <img src="<%= asset_path "no_image.png" %>" id="prev_menu_img">
                <div class="explain font"></div>
            </div>
            
        </div>
    </div>

</div>